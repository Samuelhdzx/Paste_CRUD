<%- include('../layout/main', { title: `Editar ${user.nombre}` }) %>

<% function body() { %>
  <section class="form-section">
    <div class="form-container">
      <div class="form-header">
        <h1>Editar Perfil</h1>
        <p><%= user.nombre %></p>
      </div>
      
      <% if (error) { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>
      
      <form action="/usuarios/<%= user._id %>" method="POST" class="form">
        <div class="form-group">
          <label for="nombre">Nombre</label>
          <input type="text" id="nombre" name="nombre" value="<%= user.nombre %>" required>
        </div>
        
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" value="<%= user.email %>" required>
        </div>
        
        <% if (locals.isAdmin) { %>
          <div class="form-group">
            <label for="rol">Rol</label>
            <select id="rol" name="rol">
              <option value="usuario" <%= user.rol === 'usuario' ? 'selected' : '' %>>Usuario</option>
              <option value="admin" <%= user.rol === 'admin' ? 'selected' : '' %>>Administrador</option>
            </select>
          </div>
        <% } %>
        
        <div class="form-actions">
          <a href="/usuarios/<%= user._id %>" class="btn btn-outline">Cancelar</a>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Guardar Cambios
          </button>
        </div>
      </form>
    </div>
  </section>
<% } %>

<% locals.body = body %>